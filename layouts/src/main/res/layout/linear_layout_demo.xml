    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hello"
        android:layout_weight="3"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>


</LinearLayout>